-- category:
build-type:          Simple
-- extra-source-files:
cabal-version:       >=1.10

Library
  exposed-modules:
        Ohm
      , Ohm.HTML
      , Ohm.SocketIO
      , Ohm.XHRIO
      , Ohm.Internal.HTML
      , Ohm.Internal.Immutable
  -- other-modules:
  other-extensions:    ForeignFunctionInterface, GeneralizedNewtypeDeriving, OverloadedStrings
  build-depends:       base >=4.7 && <4.8
                     , aeson > 0.8
                     , bytestring >= 0.10.4.1
                     , containers >=0.5 && <0.6
                     , contravariant >= 1.2
                     , ghcjs-base == 999
                     , ghcjs-dom == 999
                     , ghcjs-prim == 999
                     , lei >=0.0 && <0.1
                     , lens >= 4.6.0.1
                     , mmorph >=1.0 && <1.1
                     , mtl >= 2.2.1
                     , pipes >= 4.0
                     , pipes-concurrency >= 2.0
                     , profunctors >= 4.3.2
                     , split >= 0.2.2
                     , stm >=2.4 && <2.5
                     , text >=1.1 && <1.2
                     , time > 1.4
                     , transformers >= 0.4.1.0
  hs-source-dirs:      src
  js-sources:        vendor/change-event.js
                   , vendor/dom-delegator.js
                   , vendor/ev-hook.js
                   , vendor/h.js
                   , vendor/immutable.min.js
                   , vendor/socket.io.js
                   , vendor/underscore-min.js
                   , vendor/vdom.js
                   , vendor/virtualdom.js
                   , vendor/vnode.js
                   , vendor/vtext.js
  default-language:    Haskell2010
